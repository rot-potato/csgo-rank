import discord
import asyncio
from time import sleep


client = discord.Client()
TOKEN = 'NTUwNzM5ODg1NjY1ODEyNTQ2.D1m2SQ.fPfk9_uYUetRUMBdEuDuCY04EIQ'
COR = 800000
msg_id = None
msg_user = None

@client.event
async def on_ready():
    print("Iniciando os motores...")
    sleep(0.5)
    print('Pronto!')

@client.event
async def on_message(message):

    if message.content.lower().startswith("!cs"):
        embed1 = discord.Embed(
            title="Escolha seu Elo!",
            color=COR,
            description="- Prata  =  ğŸ‘\n"
                        "- Ouro  = ğŸ‘Œ\n"
                        "- AK-AKcruzada = ğŸ¤Ÿ\n"
                        "- Aguia-Supremo = ğŸ’ª\n"
                        "- Global = ğŸ¤™", )

    botmsg = await client.send_message(message.channel, embed=embed1)

    await client.add_reaction(botmsg, "ğŸ‘")
    await client.add_reaction(botmsg, "ğŸ‘Œ")
    await client.add_reaction(botmsg, "ğŸ˜¯")
    await client.add_reaction(botmsg, "ğŸ’ª")
    await client.add_reaction(botmsg, "ğŸ¤™")

    global msg_id
    msg_id = botmsg.id

    global msg_user
    msg_user = message.author

    @client.event
    async def on_reaction_add(reaction, user):
        msg = reaction.message

        if reaction.emoji == "ğŸ‘" and msg.id == msg_id:  # and user == msg_user:
            role = discord.utils.find(lambda r: r.name == "Prata-CS", msg.server.roles)
            await client.add_roles(user, role)
            print("add")

        if reaction.emoji == "ğŸ‘Œ" and msg.id == msg_id:  # and user == msg_user:
            role = discord.utils.find(lambda r: r.name == "Ouro-CS", msg.server.roles)
            await client.add_roles(user, role)
            print("add")

        if reaction.emoji == "ğŸ˜¯" and msg.id == msg_id:  # and user == msg_user:
            role = discord.utils.find(lambda r: r.name == "AK-CS", msg.server.roles)
            await client.add_roles(user, role)
            print("add")

        if reaction.emoji == "ğŸ’ª" and msg.id == msg_id:  # and user == msg_user:
            role = discord.utils.find(lambda r: r.name == "Aguia-CS", msg.server.roles)
            await client.add_roles(user, role)
            print("add")

        if reaction.emoji == "ğŸ¤™" and msg.id == msg_id:  # and user == msg_user:
            role = discord.utils.find(lambda r: r.name == "Global-CS", msg.server.roles)
            await client.add_roles(user, role)
            print("add")

